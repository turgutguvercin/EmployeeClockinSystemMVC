<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeClockinSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmployeeClockinSystem.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/">Check-In System</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">

                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin")) 
                    {
                        <li>
                            <a class="nav-link text-warning " data-controller="Employee" data-action="ShowWeeklyScheduleForAllEmployees" href="~/employee/ShowWeeklyScheduleForAllEmployees">Show Schedules </a>
                        </li>
                        <li>
                            <a class="nav-link nav-link text-warning" href="~/employee/CreateSchedule">Create Schedules </a>
                        </li>
                        <li>
                            <a class="nav-link nav-link text-warning "  href="~/employee/ShowAllWeeklyRecords">Show Weekly Records </a>
                        </li>
                         <li>
                            <a class="nav-link nav-link text-warning "  href="~/Account/GetAllUsers">Users</a>
                        </li>

                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="~/dashboard/index">Dashboard</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" href="~/employee/getSchedule">My Schedule</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/employee/weeklyrecords">My Weekly Records</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/account/logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="~/account/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/account/register">Register</a>
                        </li>
                    }


                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - EmployeeClockinSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
