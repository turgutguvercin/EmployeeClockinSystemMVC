@model LoginViewModel
@using EmployeeClockinSystem.ViewModels
@{
    ViewBag.Title = "Login";
}

<div class="container mt-5">

                @if (TempData["Error"] != null)
            {
                <div class="alert">
                    <span><b>Sorry!</b> - @TempData["Error"]</span>
                </div>
            }
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Login</h2>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="EmailAddress">Email Address</label>
                    <input asp-for="EmailAddress" class="form-control" id="EmailAddress" placeholder="Enter email">
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" asp-for="Password" class="form-control" id="Password" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Login</button>
            </form>
        </div>
    </div>
</div>