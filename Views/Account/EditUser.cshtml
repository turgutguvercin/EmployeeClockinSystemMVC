@model AccountUserViewModel;
@using EmployeeClockinSystem.ViewModels;

<h2 class="mb-4">Add Employee Details</h2>

<form asp-action="AddEmployeeDetails" method="post">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="UserEmail" />

    <div class="form-group mb-3">
        <label asp-for="EmployeeName" class="form-label">Full Name:</label>
        <input asp-for="EmployeeName" required class="form-control" placeholder="Enter Employee Name" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Position" class="form-label">Position:</label>
        <input asp-for="Position" required class="form-control" placeholder="Enter Position" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
